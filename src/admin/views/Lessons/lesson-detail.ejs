<%- contentFor('HeaderCss') %> <%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
  <div class="col-12">
    <div class="page-title-box d-flex align-items-center justify-content-between">
      <h4 class="mb-0"><%= lessonDetail.title %></h4>
      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item">
            <a href="javascript: void(0);">Lesson</a>
          </li>
          <li class="breadcrumb-item active">Detail</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<input type="hidden" id="me" name="me" value="<%= JSON.stringify(user) %>" />
<input type="hidden" id="classroomId" value="<%= classroomId %>" />

<input type="hidden" id="lessonDetail"  value="<%= JSON.stringify(lessonDetail) %>"/>
<div class="row">

  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <table id="lessondatatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Reviews</th>
              <th scope="col" style="width: 200px">Action</th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
 
</div>
<%- include("../Reviews/modals/review-form-fill") %>
<%- contentFor('FooterJs') %>
<!-- Required datatable js -->
<script src="libs/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>

<!-- Responsive examples -->
<script src="libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
<script src="libs/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>

<script src="js/pages/lesson/lesson-detail.js"></script>
<script src="js/pages/reviews/review-form-fill.js"></script>
<%- contentFor('BottomJs') %>
