<input type="hidden" id="my_learning" />
<div class="modal fade" id="userSkillFormFillModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-body">
        <div id="afterLoading" style="display: none;">
          <!-- char -->
          <div id="skill-stats" style="display: none;">
            <button id="gotoEditSkill" class="btn btn-primary">Edit</button>
            <div id="skill-chart">
              <div class="apex-charts" dir="ltr"></div>
            </div>
          </div>
          <!-- form -->
          <form id="skillFormFill" action="<%= api %>/skill_point/add" method="POST" style="display: none;">
            <input class="form-control" type="hidden" value="<%= classroomId %>" name="group" />
            <input class="form-control" type="hidden" id="skillPointOwnerId" name="owner" />
            <input type="hidden" id="skillDocId" />
            <div class="row">
              <div class="col"></div>
              <div class="col">
                <p>Listening</p>
              </div>
              <div class="col">
                <p>Reading</p>
              </div>
              <div class="col">
                <p>Speaking</p>
              </div>
              <div class="col">
                <p>Grammar</p>
              </div>
              <div class="col">
                <p>Writing</p>
              </div>
            </div>
            <div class="mb-3 row" id="mockTestBlock">
              <label for="mockTestBlock" class="col col-form-label">Mock test</label>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.mock_test.listening" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.mock_test.reading" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.mock_test.speaking" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.mock_test.grammar" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.mock_test.writing" />
              </div>
            </div>
            <div class="mb-3 row" id="middleBlock">
              <label for="middleBlock" class="col col-form-label">Middle</label>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.middle.listening" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.middle.reading" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.middle.speaking" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.middle.grammar" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.middle.writing" />
              </div>
            </div>
            <div class="mb-3 row" id="finalBlock">
              <label for="finalBlock" class="col col-form-label">Final</label>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.final.listening" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.final.reading" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.final.speaking" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.final.grammar" />
              </div>
              <div class="col">
                <input class="form-control" type="number" min="0" max="9" step="0.5" name="stats.final.writing" />
              </div>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                Close
              </button>
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </form>
        </div>
        <div id="loadingOverlay" style="display: none; ">
          <div style="height: 100%; display: flex; justify-content: center; align-items: center;  " class="d-flex align-items-center">
            <strong>Loading...</strong>
            <div class="spinner-border ml-auto" role="status" aria-hidden="true"></div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->