<div class="modal fade" id="userClassroomFormFillModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-body">
        <div class="mb-3 row">
          <label for="studentDisplayName" class="col-md-3 col-form-label">Student</label>
          <div class="col-md-9 d-flex align-items-center">
            <h5 class="m-0 " id="studentDisplayName">
            </h5>
          </div>
        </div>
        <form id="classroomImportFormFill">
          <div class="mb-3 row">
            <label for="courseDropBox" class="col-md-3 col-form-label">Course</label>
            <div class="col-md-9">
              <select class="form-select" name="course" id="courseDropBox">
                <option value="" selected disabled>---Select Course---</option>
                <% listCourse.forEach(function(course){ %>
                <option value="<%= course._id %>"><%= course.name %></option>
                <% }); %>
              </select>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="classroomIdRef" class="col-md-3 col-form-label">Class</label>
            <div class="col-md-9">
              <select class="form-select" name="group" id="classroomIdRef">
                <option selected disabled>-- Class --</option>
              </select>
            </div>
          </div>
          <input type="hidden" class="form-control" name="members.member" id="userIdBelongRow" />
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">
          Close
        </button>
        <button type="submit" form="classroomImportFormFill" class="btn btn-primary">Save changes</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->