<header id="page-topbar">
  <div class="navbar-header">
    <div class="d-flex">
      <!-- LOGO -->
      <div class="navbar-brand-box">
        <a href="/" class="logo logo-dark">
          <span class="logo-sm">
            <img src="images/logo-sm.png" alt="" height="22">
          </span>
          <span class="logo-lg">
            <img src="images/logo-dark.png" alt="" height="20">
          </span>
        </a>

        <a href="/" class="logo logo-light">
          <span class="logo-sm">
            <img src="images/logo-sm.png" alt="" height="22">
          </span>
          <span class="logo-lg">
            <img src="images/logo-light.png" alt="" height="20">
          </span>
        </a>
      </div>

      <button type="button" class="btn btn-sm px-3 font-size-16 header-item waves-effect vertical-menu-btn">
        <i class="fa fa-fw fa-bars"></i>
      </button>
    </div>

    <div class="d-flex">
      <div class="dropdown d-inline-block">
        <button type="button" class="btn header-item waves-effect" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <% if (user.settings && (user.profile?.photo && user.profile?.photo !== "")) { %>
          <img class="rounded-circle header-profile-user" src="images/users/<%= user.profile?.photo %>" alt="Header Avatar" style="object-fit: cover;">
          <% } else {%>
          <div class="avatar-xs d-inline-block me-2">
            <span class="avatar-title rounded-circle bg-light text-body">
              <%= user.profile?.display_name[0].toUpperCase()%>
            </span>
          </div>
          <% } %>
          <span class="d-none d-xl-inline-block ms-1 fw-medium font-size-15"><%= user.profile?.display_name %> </span>
          <i class="uil-angle-down d-none d-xl-inline-block font-size-15"></i>
        </button>
        <div class="dropdown-menu dropdown-menu-end">
          <!-- item-->
          <!-- <a class="dropdown-item" href="<%= base %>/my-profile"><i class="uil uil-user-circle font-size-18 align-middle text-muted me-1"></i> <span class="align-middle"><%=translation.View_Profile%></span></a> -->
          <!-- <a class="dropdown-item" href="#"><i class="uil uil-wallet font-size-18 align-middle me-1 text-muted"></i> <span class="align-middle"><%=translation.My_Wallet%></span></a> -->
          <!-- <a class="dropdown-item d-block" href="#"><i class="uil uil-cog font-size-18 align-middle me-1 text-muted"></i> <span class="align-middle"><%=translation.Settings%></span> <span class="badge bg-soft-success rounded-pill mt-1 ms-2">03</span></a> -->
          <!-- <a class="dropdown-item" href="#"><i class="uil uil-lock-alt font-size-18 align-middle me-1 text-muted"></i> <span class="align-middle"><%=translation.Lock_screen%></span></a> -->
          <a class="dropdown-item" href="<%= root %>/auth/logout">
            <i class="uil uil-sign-out-alt font-size-18 align-middle me-1 text-muted"></i> <span class="align-middle"><%=translation.Sign_out%></span>
          </a>
        </div>
      </div>

      <div class="dropdown d-inline-block">
        <button type="button" class="btn header-item noti-icon right-bar-toggle waves-effect">
          <i class="uil-cog"></i>
        </button>
      </div>

    </div>
  </div>
</header>