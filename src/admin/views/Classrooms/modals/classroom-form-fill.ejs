<div class="modal fade" id="modalClassroomFormFill" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-body">
        <form id="classroomFormFill" action="<%= api %>/group/add" method="POST">
          <input type="hidden" name="course" value="<%= courseId%>">
          <div class="mb-3 row">
            <label for="classroomName" class="col-md-3 col-form-label">Name</label>
            <div class="col-md-9">
              <input class="form-control" type="text" value="" name="name" id="classroomName" />
            </div>
          </div>
          <div class="mb-3 row">
            <label for="classroomHost" class="col-md-3 col-form-label">Host</label>
            <div class="col-md-9">
              <select class="form-select" name="host" id="classroomHost">
                <option selected disabled>---Select Host---</option>
              </select>
            </div>
          </div>
          <div class="mb-3 row">
            <div class="col">
              <label for="classroomQuantity" class="col-md-3 col-form-label">Quantity</label>
              <input class="form-control" type="number" value="" name="max_qty" id="classroomQuantity" />
            </div>
            <div class="col">
              <label for="classroomType" class="col-md-3 col-form-label">Type</label>
              <div class="row" id="classroomType">
                <div class="form-check my-0">
                  <input class="form-check-input" type="radio" name="is_online" id="true" value="true" /><label class="form-check-label" for="radio-true">Online</label>
                </div>
                <div class="form-check my-0">
                  <input class="form-check-input" type="radio" name="is_online" id="false" value="false" /><label class="form-check-label" for="radio-false">Offline</label>
                </div>
              </div>
            </div>
          </div>
          <div class="mb-3 row ">

          </div>
        </form>
        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
          <button type="submit" form="classroomFormFill" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->