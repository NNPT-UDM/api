<style>
  .outer {
    position: relative;
    display: flex;
    width: 100%;
    height: 100%;
    min-height: 150px;
    justify-content: center;
    align-items: center;
  }

  .inner {
    font-size: 24px;
    font-weight: 700;

    text-align: center;
  }

  .rotate {
    -moz-transform: rotate(-90deg);
    -webkit-transform: rotate(-90deg);
    transform: rotate(-90deg);
  }
</style>
<div id="nav-diagnoses" role="tabpanel" aria-labelledby="nav-diagnoses-tab" class="tab-pane fade mt-3">
  <input type="hidden" id="diagnosticsGroup">
  <div class="row mb-2">
    <div class="col-md-6">
      <div class="mb-3">
        <div class="btn-group me-1">
          <button id="btn-skill-label" type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="mdi mdi-chevron-down"></i>
          </button>
          <div class="dropdown-menu">
            <% skills.forEach(function(skill){ %>
            <a class="show-by-skill-diagnose dropdown-item" type="button" action="<%= skill._id %>"><%= skill.name %>
            </a>
            <% }); %>
          </div>
        </div>
        <!-- /btn-group -->
        <% if(![ "student"].includes(user.role.slug)){%>
        <a href="javascript:void(0);" class="btn btn-success waves-effect waves-light btn-new-lesson" id="add-new-diagnoses" data-bs-toggle="modal" data-bs-target="#diagnosesClassroomFormFillModal"><i class="mdi mdi-plus me-2"></i>Add Diagnoses</a>
        <% } %>
      </div>
    </div>
  </div>
  <!-- end row -->
  <table id="logbookdatatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%">
    <thead>
      <tr>
        <th class="text-center" scope="col">#</th>
        <th scope="col">Types</th>
        <th scope="col">1st</th>
        <th scope="col">2st</th>
        <th scope="col">3st</th>
        <th scope="col">4st</th>
        <th scope="col">Activated</th>
        <th scope="col" style="width: 200px">Notes</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</div>
<%- include("./modals/diagnoses-classroom-form-fill") %>