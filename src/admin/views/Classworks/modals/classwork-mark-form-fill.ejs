<div class="modal fade" id="classworkMarkFormFillModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <div class="mb-3 row" id="classworkAnswerAttachment">
            <label class="col-md-3 col-form-label">Attachment Answer</label>
            <div class="col-md-9 col-form-label" id="classworkAnswerAttachmentShow"></div>
          </div>
          <form id="classworkMarkFormFill" enctype="multipart/form-data" method="POST" action="<%= api %>/classwork_mark/add">
            <input class="form-control" type="hidden" value="<%= classworkId %>" name="classwork" id="edit-groupIdRef" />
            <input class="form-control" type="hidden" value="" name="classwork_answer" id="classworkAnswerId" />

            <div class="mb-3 row">
              <label for="classworkAnswerRubric" class="col-md-3 col-form-label">Rubric</label>
              <div class="col-md-9">
                <input class="form-control" type="text" value="" name="rubric" id="classworkAnswerRubric" />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="classworkAnswerScore" class="col-md-3 col-form-label">Score</label>
              <div class="col-md-9">
                <input class="form-control" type="number" value="" name="score" id="classworkAnswerScore" />
              </div>
            </div>

            <div class="mb-3 row" id="div-attachment">
              <label for="classworkMarkAttachment" class="col-md-3 col-form-label">Attachment</label>
              <div class="col-md-9">
                <input class="form-control" type="file" name="t_subs" id="classworkMarkAttachment" multiple />
                <div id="classworkMarkAttachmentShow"></div>
              </div>
            </div>
            <!-- <textarea
              class="form-control"
              id="edit-description-input"
              name="description"
            ></textarea> -->
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
          <button type="submit" form="classworkMarkFormFill" class="btn btn-primary">Save changes</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  <!-- /.modal -->
</div>